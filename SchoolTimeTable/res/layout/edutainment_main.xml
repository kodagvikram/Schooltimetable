<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.previewresult.EdutainmentActivity" >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <RelativeLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation"
            android:gravity="center" >

            <Button
                android:id="@+id/menuBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_icon" />

            <RelativeLayout
                android:id="@+id/menubuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/menuBtn"
                android:background="@drawable/navigation"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDUTAINMENT"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/layoutoptionbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="#FFFFFF" >

                <Button
                    android:id="@+id/buttonnews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgreenbutton"
                    android:checked="true"
                    android:gravity="center"
                    android:text="NEWS"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/buttonQuotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonnews"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backgreenbutton"
                    android:gravity="center"
                    android:text="QUOTES"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/buttonimages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonQuotes"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backgreenbutton"
                    android:gravity="center"
                    android:text="IMAGES"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/buttonvideos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonimages"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backgreenbutton"
                    android:gravity="center"
                    android:text="VIDEOS"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>