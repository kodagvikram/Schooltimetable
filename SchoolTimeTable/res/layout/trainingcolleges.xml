<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.tertiaryinfo.TertiaryinfoActivity" >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <RelativeLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation"
            android:gravity="center" >

            

            <RelativeLayout
                android:id="@+id/menubuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/menuBtn"
                android:background="@drawable/navigation"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAINING COLLEGES"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutoptionbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Layout"
            android:gravity="center" >

            <Button
                android:id="@+id/buttonnursingcolleges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgreenbutton"
                android:checked="true"
                android:gravity="center"
                android:text="NURSING TRAINING COLLEGES"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonteachertrainingcolleges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonnursingcolleges"
                android:layout_marginTop="10dp"
                android:background="@drawable/backgreenbutton"
                android:gravity="center"
                android:text="TEACHER TRAINING COLLEGES"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonothers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonteachertrainingcolleges"
                android:layout_marginTop="10dp"
                android:background="@drawable/backgreenbutton"
                android:gravity="center"
                android:text="OTHERS"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>